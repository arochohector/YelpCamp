<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center;">Editing <em><%= campground.name %></em></h1>
    <div class="row">
        <div style="width:30%;margin:35px auto;">
            <form method="POST" action="/campgrounds/<%= campground._id %>/edit?_method=PUT">
                <div class="form-group">
                    <input type="text" placeholder="name" name="campground[name]" class="form-control" value="<%= campground.name %>"></input>
                </div>
                <div class="form-group">
                    <input type="number" placeholder="price" name="campground[price]" class="form-control" value="<%= campground.price %>" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input type="text" 
                            placeholder="image Url" 
                            name="campground[image]" 
                            class="form-control" 
                            value="<%= campground.image %>">
                    </input>
                </div>
                <div class="form-group">
                    <input type="text" 
                           placeholder="campground[description]" 
                           name="description" 
                           class="form-control" 
                           value=" <%= campground.description %>">
                    </input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>