<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center;">Create a new campground</h1>
    <div class="row">
        <div style="width:30%;margin:35px auto;">
            <form method="POST" action="/campgrounds">
                <div class="form-group">
                    <input type="text" placeholder="name" name="campname" class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="number" placeholder="price" name="price" class="form-control" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="image Url" name="image" class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="description" name="description" class="form-control"></input>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>