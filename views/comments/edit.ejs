<% include ../partials/header %>
    <div class="container">
        <h1 style="text-align:center;">Edit Campground Comment
        </h1>
        <div class="row">
            <div style="width:30%;margin:35px auto;">
                <form method="POST" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT">
                    <div class="form-group">
                        <input type="text" name="comment[text]" class="form-control" value="<%= comment.text %>"></input>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground_id %>" class="btn btn-default btn-block">Go Back</a>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>