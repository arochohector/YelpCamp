<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;">Add a new comment to <%= campground.name %></h1>
    <div class="row">
        <div style="width:30%;margin:35px auto;">
            <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
                <div class="form-group">
                    <input type="text" placeholder="comment text" name="comment[text]" class="form-control"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds" class="btn btn-default btn-block">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>